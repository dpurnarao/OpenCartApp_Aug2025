<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!-- TestNG XML customised as per the test execution-->

<!--  Parallel execution will be achieved with TestNG.if the thread-cound and parallel is not configured then the test will be
      executed sequentially. Parallel execution will be achieved by adding parallel="tests" and thread-count="5" parameters
      at suite level.
      Three browser instances will be opened same time and the tests are executed at
       same during the parallel mode -->

<!-- Parallel test execution configuration -->
<!-- suite is overall test suite name -->
<suite name="Opencart App Test regression suite" verbose="3" thread-count="5" parallel="tests">

	<!-- test block 1: LoginPageTest-->
	<test name="LoginPage Test" verbose="2">
        <parameter name="browser" value="chrome" /> 
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<!-- test block 2: AccountsPageTest-->
	<test name="Accounts Page Test" verbose="2">
        <parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<!-- test block 3: SearchTest-->
	<test name="Search PageTest" verbose="2">
        <parameter name="browser" value="chrome" />   
		<classes>
			<class name="com.qa.opencart.tests.SearchTest" />
		</classes>
	</test>

	<!-- test block 4: ProductInfoPageTest-->
	<test name="ProductInfo PageTest" verbose="2">
        <parameter name="browser" value="chrome" /> 
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<!-- test block 5: RegisterPageTest-->
 	<test name="Register PageTest" verbose="2">
           <parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test>

</suite> 